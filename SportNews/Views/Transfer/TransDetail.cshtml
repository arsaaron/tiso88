        <div class="col-md-12 col-sm-12">
            <label>@Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.title))</label>
        </div>
        <div class="col-md-12 col-sm-12">
            <img src="@Model.imageLnk" alt="image link" border="0">
        </div>
        <div class="col-md-12 col-sm-12">
            <p>@Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.descp))</p>
            <p>@Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.content))</p>
        </div>
        @if (Model.source != null || Model.source != "")
        {
            <div class="col-md-12 col-sm-12">
                <p>Nguồn: @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.source))</p>
