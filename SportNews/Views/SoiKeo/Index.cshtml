@model SportNews.Models.SumLst
@{
    ViewBag.Title = "Chi tiết các kèo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-success">
    <div class="panel-heading">
        <b>Chi tiết các kèo</b>
    </div>
    @if (Model.LstAll.Count > 0)
    {
        <div class="panel-body">
            @foreach (var dat in Model.LstAll)
            {
                <div class="odds_group">

                    <div class="odds_group-title">
                        @dat.name
                    </div>
                    @foreach (var da in dat.OddLst)
                    {
                        <table class="odds_table ">
                            <thead>
                                @if (da.cate == 6)
                                {
                                    <tr>
                                        <th colspan="3">
                                            Kèo Châu Á (Cả trận)
                                        </th>
                                        <th colspan="3">
                                            Tài/Xỉu (Cả trận)
                                        </th>
                                    </tr>
                                    <tr>
                                        <th>
                                            Chủ
                                        </th>
                                        <th>
                                            Tỷ lệ
                                        </th>
                                        <th>
                                            Khách
                                        </th>
                                        <th>
                                            Trên
                                        </th>
                                        <th>
                                            Tổng Bàn Thắng
                                        </th>
                                        <th>
                                            Dưới
                                        </th>
                                    </tr>
                                }
                                @if (da.cate == 1)
                                {
                                    <tr>
                                        <th>
                                            @da.HomeChoice
                                        </th>
                                        <th>
                                            @da.DrawChoice
                                        </th>
                                        <th>
                                            @da.AwayChoice
                                        </th>
                                    </tr>
                                }
                                else if (da.cate == 2)
                                {
                                    <tr>
                                        <th>
                                            @da.HomeChoice
                                        </th>
                                        <th>
                                            @da.AwayChoice
                                        </th>
                                    </tr>
                                }
                                else if (da.cate == 3)
                                {
                                    <tr>
                                        <th>
                                            Goals
                                        </th>
                                        <th>
                                            Over
                                        </th>
                                        <th>
                                            Under
                                        </th>
                                    </tr>
                                }
                            </thead>
                            <tbody>
                                @if (da.cate == 6)
                                {
                                    <tr>
                                        <td>
                                            @da.AsaHome
                                        </td>
                                        <td>
                                            @da.AsaDraw
                                        </td>
                                        <td>
                                            @da.AsaAway
                                        </td>
                                        <td>
                                            @da.OverChoice
                                        </td>
                                        <td>
                                            @da.TotalChoice
                                        </td>
                                        <td>
                                            @da.UnderChoice
                                        </td>
                                    </tr>
                                }
                                @if (da.cate == 1)
                                {
                                    <tr>
                                        <td>
                                            @da.HomeWn
                                        </td>
                                        <td>
                                            @da.Draw
                                        </td>
                                        <td>
                                            @da.AwayWn
                                        </td>
                                    </tr>
                                }
                                else if (da.cate == 2)
                                {
                                    <tr>
                                        <td>
                                            @da.HomeWn
                                        </td>
                                        <td>
                                            @da.AwayWn
                                        </td>
                                    </tr>
                                }
                                else if (da.cate == 3)
                                {
                                    foreach (var rs in da.GoaLst)
                                    {
                                        <tr>
                                            <td>
                                                @rs.goal
                                            </td>
                                            <td>
                                                @rs.OverGo
                                            </td>
                                            <td>
                                                @rs.UnderGo
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div>
            Thông tin về trận đấu này đang được cập nhật, vui lòng trở lại sau, cảm ơn!
        </div>
    }

</div>

<style>
    .odds_group {
        padding: 4px 0 0;
    }

    .odds_group-title {
        color: gray;
    }

    .odds_table {
        width: 100%;
        margin: 0;
    }

    table {
        width: 100%;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
    }

    .odds_table th {
        font-size: 12px;
        color: #a0a0a0;
        padding-bottom: 0;
        text-align: center;
    }

    .odds_table td {
        width: 33.333%;
        text-align: center;
    }
</style>
