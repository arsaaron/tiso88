                                    <img src="@dat.imageLnk" alt="image link" border="0" style="width:100%;">
                                </div>
                                <div class="col-md-6 col-sm-12">
                                    <b>@Html.Raw(System.Web.HttpUtility.HtmlDecode(dat.title))</b>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <br />
                @*<div class="col-md-12 col-sm-12">
